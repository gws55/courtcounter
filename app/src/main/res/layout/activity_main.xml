<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    android:id="@+id/linearLayout"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/layout_teamA"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:id="@+id/textView_teamA_title"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView_teamA_score"
                android:paddingTop="16dp"
                android:textSize="56sp"
                android:textIsSelectable="false"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:onClick="onClick_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:onClick="onClick_button2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:onClick="onClick_button3" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:paddingTop="16dp"
            android:layout_marginBottom="100dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/layout_teamB"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:id="@+id/textView_teamB_title"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingTop="16dp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView_teamB_score"
                android:paddingTop="16dp"
                android:textSize="56sp"
                android:textIsSelectable="false"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:onClick="onClick_button4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:onClick="onClick_button5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:onClick="onClick_button6" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick_button7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp" />

    </RelativeLayout>

</LinearLayout>
